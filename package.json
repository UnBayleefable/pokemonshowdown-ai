{
  "name": "pokemonshowdown-ai",
  "version": "0.0.1",
  "description": "AI project for Pokemon Showdown",
  "private": true,
  "engines": {
    "node": ">=14.0.0"
  },
  "main": "dist/psbot/index.js",
  "scripts": {
    "prepare": "husky install",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "train": "node -r source-map-support/register dist/demo/train.js",
    "psbot": "node -r source-map-support/register dist/demo/psbot.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run test:unit",
    "test:nocov": "npm run test:unit:nocov",
    "test:unit": "nyc mocha --spec test/unit.ts",
    "test:unit:nocov": "mocha --spec test/unit.ts"
  },
  "mocha": {
    "file": "test/setup-chai.ts",
    "recursive": true,
    "require": [
      "source-map-support/register",
      "ts-node/register"
    ],
    "trace-warnings": true,
    "watch-files": [
      "src/**/*.test.ts"
    ]
  },
  "nyc": {
    "all": true,
    "exclude": [
      "coverage/",
      "dist/",
      "scripts/",
      "src/config/",
      "src/demo/",
      "src/**/*.test.ts",
      "src/**/*.js",
      "test/"
    ],
    "reporter": [
      "html",
      "lcov",
      "text"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/taylorhansen/pokemonshowdown-ai"
  },
  "keywords": [
    "pokemon"
  ],
  "author": "Taylor Hansen (taylorhansen)",
  "license": "MIT",
  "dependencies": {
    "@pkmn/protocol": "^0.4.3",
    "@pkmn/randoms": "^0.5.19",
    "@pkmn/sim": "^0.5.19",
    "@tensorflow/tfjs": "^3.18.0",
    "@tensorflow/tfjs-node": "^3.18.0",
    "@tensorflow/tfjs-node-gpu": "^3.18.0",
    "long": "^5.2.0",
    "node-fetch": "^2.6.7",
    "progress": "^2.0.3",
    "seedrandom": "^3.0.5",
    "tfrecord": "^0.2.0",
    "tiny-typed-emitter": "^2.1.0",
    "tmp-promise": "^3.0.3",
    "websocket": "^1.0.34"
  },
  "devDependencies": {
    "@pkmn/data": "^0.5.19",
    "@pkmn/dex": "^0.5.19",
    "@pkmn/dex-types": "^0.5.19",
    "@pkmn/types": "^2.0.0",
    "@types/chai": "^4.3.1",
    "@types/chai-as-promised": "^7.1.5",
    "@types/long": "^4.0.2",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.11.41",
    "@types/node-fetch": "^2.6.2",
    "@types/progress": "^2.0.5",
    "@types/websocket": "^1.0.5",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-mocha": "^10.0.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "git-format-staged": "^3.0.0",
    "husky": "^8.0.1",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4"
  }
}
